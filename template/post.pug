head
  include partials/headMeta.pug

body
  include partials/header.pug
  .content
    |!{pageData}

    .navigator
      if next.path
        a(href=`${siteUrl}/posts/${next.path}`) &laquo; #{next.title}
      else
        span

      if prev.path
        a(href=`${siteUrl}/posts/${prev.path}`) #{prev.title} &raquo;
      else
        span

  include partials/footer.pug
